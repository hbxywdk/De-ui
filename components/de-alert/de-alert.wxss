@import '/app.wxss';

.reject-box{
  position: fixed;
  top: 50%;
  left: 50%;
  background: #fff;
  transform: translate3d(-50%, -50%, 0);
  width: 560rpx;
  border-radius: 8rpx;
  padding-top: 30rpx;
  box-sizing: border-box;
  z-index: 1001;  
}
.reject-tit{
  font-size: 37rpx;
  line-height: 50rpx;
  text-align: center;
  margin-bottom: 30rpx;
}
.reject-content{
  color: #888;
  font-size: 30rpx;
  width: 450rpx;
  margin: 10rpx auto 120rpx;
  line-height: 55rpx;
  /* height: 300rpx; */
}
/* 按钮区 */
.warp-button{
  position: absolute;
  width: 100%;
  bottom: 0;
  left: 0;
  border-top: 1rpx solid #ccc;
  font-size: 28rpx;
}
.warp-button>view{
  flex: 1;
  text-align: center;
  padding: 10rpx 0;
}
.cancel{
  border-right: 1rpx solid #ccc;
  height: 100%;
}
.auth-button{
  color: #02BB00;
  background: #fff;
  font-size: 28rpx;
}
.auth-mask{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
  background: rgba(0, 0, 0, .5);
  z-index: 1000;
}