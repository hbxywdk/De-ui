@import '/app.wxss';
.warp-options{
  height: 40rpx;
}
.title-box{
  height: 100%;
  text-align: center;
  font-size: 28rpx;
  color: #777;
}
.arrow{
  width: 14rpx;
  height: 8rpx;
  vertical-align:middle;
  margin-left: 10rpx;
}
.select-options{
  position: absolute;
  width: 100%;
  left: 0;
  z-index: 100;
  text-align: center;
  background: #fff;
  padding: 20rpx 0;
}
.option-item{
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
}
.item-disable{
  color: #ccc;
}
.item-select{
  color: red;
}
.filter-mask{
  position: fixed;
  z-index: 1;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background: #000;
  opacity: 0.2;
}
.number-range{
  padding: 10rpx 30rpx;
  font-size: 28rpx;
}
.range-input{
  padding: 0 20rpx;
  border: 1rpx solid #efefef;
  height: 55rpx;
  box-sizing: border-box;
  border-radius: 8rpx;
  width: 120rpx;
  display: inline-block;
  vertical-align: middle;
  margin-right: 20rpx;
  text-align: left;
}
.range-button{
  width: 110rpx;
  height: 55rpx;
  background: #2ccaf4;
  color: #fff;
  font-size: 28rpx;
  line-height: 50rpx;
  text-align: center;
  border-radius: 5rpx;
}