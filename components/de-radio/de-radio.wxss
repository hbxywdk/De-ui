@import '/app.wxss';

.radio-item{
  font-size: 28rpx;
  height: 90rpx;
  line-height: 90rpx;
  padding: 0 30rpx;
  border-top: 1rpx solid #efefef;
  box-sizing: border-box;
  position: relative;
  color: #444;
}
.icon-box{
  width: 46rpx;
  height: 46rpx;
  position: absolute;
  right: 30rpx;
  top: 50%;
  margin-top: -23rpx;
  background: #dfdfdf;
  border-radius: 50%;
}
.icon-box.select{
  background: #2ccaf4;
}
.disabled-name{
  color: #ccc;
}
