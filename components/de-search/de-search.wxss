@import '/app.wxss';

.search-bg {
  font-size: 28rpx;
  box-sizing: border-box;
}
.search-bg .warp-input{
  background: #fff;
  position: relative;
}
.warp-input input{
  padding-left: 20rpx;
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  z-index: 1;
}
.warp-input .cancel-search{
  position: absolute;
  width: 70rpx;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  color: #50aa37;
  z-index: 2;
}
.search-mask{
  width: 100%;
  height: 100%;
  position: absolute;
  z-index: 3;
  text-align: center;
  font-size: 26rpx;
  color: #828282;
  background: #fff;
}
.mask-words{
  position: relative;
  width: 150rpx;
}
.search-icon{
  transform: translateY(5%); 
  margin-right: 5rpx;
}