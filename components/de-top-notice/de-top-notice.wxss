.de-close{
  position: relative;
  width: 50rpx;
  height: 50rpx;
}
.de-close:before{
  content: "";
  display: inline-block;
  height: 0rpx;
  width: 35rpx;
  border-width: 2rpx 0 0 0;
  border-color: #e66b4a;
  border-style: solid;
  position: absolute;
  top: 50%;
  left: 50%;
  -webkit-transform: translate3d(-50%, -50%, 0) rotate(-45deg);
  transform: translate3d(-50%, -50%, 0) rotate(-45deg);
}
.de-close:after{
  content: "";
  display: inline-block;
  height: 0rpx;
  width: 35rpx;
  border-width: 2rpx 0 0 0;
  border-color: #e66b4a;
  border-style: solid;
  position: absolute;
  top: 50%;
  left: 50%;
  -webkit-transform: translate3d(-50%, -50%, 0) rotate(45deg);
  transform: translate3d(-50%, -50%, 0) rotate(45deg);
}