@import '/app.wxss';
.de-top-notice{
  width: 100%;
  height: 50rpx;
  color: #e66b4a;
}
.de-text-content{
  flex: 1;
  font-size: 28rpx;
  position: relative;
}
.de-text-content .de-text{
  padding-left: 20rpx;
  position: absolute;
  left: 0%;
  top: 50%;
  -webkit-transform: translateY(-50%);
  transform: translateY(-50%);
  /* animation: roll 5s infinite; */
}
